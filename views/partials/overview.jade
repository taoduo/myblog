h1 Overview
table#overview-table.table.table-hover(border='1')
  tr
    th Title
    th Operations
  tr(ng-repeat='b in blogs')
    td {{b.title}}
    td
      button.btn.btn-default(ng-click='delete(b._id)')
        | Delete 
      button.btn.btn-default(data-toggle='modal' data-target='#edit-modal' ng-click='edit(b._id)')
        | Edit 

#edit-modal.modal.fade(data-backdrop='static' tabindex='-1', role='dialog', aria-labelledby='edit-modal', aria-hidden='true')
  .modal-dialog.modal-lg(role='document')
    .modal-content
      .modal-header
        button.close(type='button', aria-label='Close', ng-click='closeEdit()')
          span(aria-hidden='true') Ã—
        h4.modal-title Edit
      .modal-body
        include post
      .modal-footer
        button.btn.btn-default(type='button', ng-click='closeEdit()') Close
