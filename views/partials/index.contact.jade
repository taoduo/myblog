// CONTACT section of index page
.post
  h2.title
    a(href='#') Contact Me (Or Find Me!)
  .entry
    ul
      li
        b Email
        | : taod@carleton.edu
      li
        b Address
        | : 300 North College Street, Northfield, MN, USA 55057
    #map
    h3 Where I have been
    table.table-hover.table
      thead
        tr
          th Time
          th Location
          th Comment
      tbody
        tr(ng-repeat='l in locations' ng-click='checkLocation(l.lat, l.lng, l.time)' style='cursor:pointer;')
          td
            | {{l.time | date : 'medium'}}
          td
            | {{l.lat}}, {{l.lng}}
          td
            | {{l.comment}}
