extends layout
block content
  script(src='/modules/controllers.management.js')
  .app-wrapper(ng-app='management')
    #wrapper
      #header-wrapper
        #header
          #logo
            h1
              a(href='/') Duo Tao's Blog 
            p
              |  Administrator Page
      // end #header
      #menu(ng-controller='menuController')
        include partials/managementMenu
      // end #menu
      #page
        #page-bgtop
          #page-bgbtm
            #overview(ng-controller='overviewController' ng-if="content === 'overview'")
              include partials/overview
            #post(ng-controller='postController' ng-if="content === 'post'")
              include partials/post
            #locations(ng-controller='locationController' ng-if="content === 'location'")
              include partials/location
            div(style='clear: both;')
      // end #page
    #footer
      include partials/footer
