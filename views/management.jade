extends head
block content
  script(src='/modules/controllers.management.js')
  .app-wrapper(ng-app='management')
    #wrapper
      include partials/management.header.jade
      // end #menu
      #page
        #page-bgtop
          #page-bgbtm
            #overview(ng-controller='overviewController' ng-if="content === 'overview'")
              include partials/management.overview.jade
            #post(ng-controller='postController' ng-if="content === 'post'")
              include partials/management.post.jade
            #locations(ng-controller='locationController' ng-if="content === 'location'")
              include partials/management.location.jade
            div(style='clear: both;')
      // end #page
    #footer
      include partials/footer
